{
  "name": "marie",
  "version": "0.1.0",
  "description": "Marie - AI coding agent CLI",
  "main": "dist/cli-new/index.js",
  "bin": {
    "marie": "./dist/cli-new/index.js",
    "marie-legacy": "./dist/cli-standalone/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/cli-new/index.js && chmod +x dist/cli-standalone/index.js",
    "dev": "ts-node --esm src/cli-new/index.ts",
    "dev:legacy": "ts-node --esm src/cli-standalone/index.ts",
    "start": "node dist/cli-new/index.js",
    "start:legacy": "node dist/cli-standalone/index.js",
    "test": "npm run test:cli",
    "test:cli": "node --loader ts-node/esm tests/cli/run_all_tests.ts",
    "test:cli:storage": "node --loader ts-node/esm tests/cli/test_storage.ts",
    "test:cli:marie": "node --loader ts-node/esm tests/cli/test_marie_cli.ts",
    "test:cli:tools": "node --loader ts-node/esm tests/cli/test_tool_definitions.ts",
    "test:cli:joy": "node --loader ts-node/esm tests/cli/test_joy_services.ts",
    "test:cli:standalone": "node --loader ts-node/esm tests/cli/test_cli_standalone.ts"
  },
  "keywords": [
    "ai",
    "cli",
    "coding",
    "agent"
  ],
  "author": "",
  "license": "Apache-2.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.73.0",
    "@cerebras/cerebras_cloud_sdk": "^1.64.1",
    "zod": "^3.22.0",
    "ink": "^5.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "ink-select-input": "^6.0.0",
    "react": "^18.3.0",
    "shiki": "^1.0.0",
    "chalk": "^5.3.0",
    "strip-ansi": "^7.1.0",
    "wrap-ansi": "^9.0.0",
    "simple-git": "^3.22.0",
    "marked": "^12.0.0",
    "marked-terminal": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0"
  }
}